# Django Settings (backend)
SECRET_KEY=your-secret-key-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Редирект GET / на фронт (backend config)
FRONTEND_URL=http://localhost:3000

# Frontend (Vite) — базовый URL API для запросов
# Локальная разработка: не задавайте или /api/v1 (запросы идут через Vite proxy — один origin, стабильнее)
# Прод или отдельный фронт: https://your-api-domain.com/api/v1
# VITE_API_URL=/api/v1

# Database (PostgreSQL)
DB_NAME=office_suite
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Redis (кэш, Celery broker и result backend)
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379

# Celery — по умолчанию используется REDIS_URL; переопределите, если брокер на другом хосте
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/1

# CORS (разрешённые origins для фронта)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Telegram Bot (Login Widget, привязка аккаунтов, уведомления о задачах)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_BOT_USERNAME=YourBotUsername

# Google Sheets (путь к JSON сервисного аккаунта)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Google Sheets - периодический экспорт (Celery Beat, каждый час)
# JSON-массив проектов для автоматического экспорта: [{"project_id": 1, "sheet_id": "1abc..."}]
# Опционально: если не указано, периодический экспорт не выполняется
GOOGLE_SHEETS_SCHEDULED_EXPORTS=[{"project_id": 1, "sheet_id": "your-sheet-id"}]

# JWT (опционально) — срок жизни токенов задаётся в config/settings/base.py (SIMPLE_JWT).
# При необходимости можно вынести в env: ACCESS_TOKEN_LIFETIME, REFRESH_TOKEN_LIFETIME.
